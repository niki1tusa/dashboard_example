generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  name     String
  email    String @unique
  password String
}

model Customer {
  id          String        @id @default(uuid())
  name        String
  email       String        @unique
  image_url   String
  invoices    Invoice[]
  InvoiceForm InvoiceForm[]
}

model Invoice {
  id          String        @id @default(uuid())
  customer    Customer      @relation(fields: [customer_id], references: [id])
  customer_id String
  amount      Float
  date        DateTime
  status      InvoiceStatus
}

enum InvoiceStatus {
  pending
  paid
}

model Revenue {
  id      String @id @default(uuid())
  month   String
  revenue Float
}

model CustomerField {
  id   String @id @default(uuid())
  name String
}

model InvoiceForm {
  id          String        @id @default(uuid())
  customer    Customer      @relation(fields: [customer_id], references: [id])
  customer_id String
  amount      Float
  status      InvoiceStatus
}
